
<div class="ecran">
    <div class= "banner" style = 'background-image: linear-gradient(0deg, rgba(250,169,22,1) 0%, rgba(0,0,0,0) 47%, rgba(0,0,0,0.9) 100%), url(<%= "#{@place.photo}" %>); background-size: cover;'>
          <div class="center-text">
              <h1>Tu vas dater </h1>
              <h1 class="text-center"><%=@liked_user.name %></h1>
          </div>
        <%= link_to user_path(@liked_user) do  %>
        <%= image_tag "#{@liked_user.photo}", alt: "best place ever", class: "avatar-date" %>
        <% end %>

        <div class="bottom-left">
          <a href= <%="#{@place.url}"%> target ="_blank" style="text-decoration: none;">
          <h2><%= @place.name %></h2>
          </a>
          <h3><%= @place.category %></h3>
          <h3><%= @place.address %></h3>
        </div>
    </div>

    <div class = "rdv">
      <h1>Ton date est le :</h1>
      <h2> <%= @dispo%> </h2>

      <div class="annulation m-t:4">
         <%= link_to "Annuler le date",  meeting_lapins_path(@meeting), method: :post, class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</div>




