
  <div class="meeting-topbar">
    <div class="center-text-meeting">
      <%= image_tag "LogoComptoir.png", alt: "alttext", style: "height:7vh"%>
      <h1>Ton date</h1>
    </div>
    <div class="row-meeting">
      <div class="col-avatar">
        <%= link_to user_path(@liked_user) do  %>
          <%= cl_image_tag "#{@liked_user.photos[0].key}", alt: "match photo", class: "avatar-date" %>
        <% end %>
      </div>
      <div class="col-text" >
        <p class= "with">avec</p>
        <%= link_to new_meeting_feedback_path(@meeting) do %>
          <p class="meeting-hour_name"><%=@liked_user.name %></p>
        <% end %>
      </div>
    </div>

    <div class="m-2 row-meeting ">
      <div class="col-text font-correction">
      <p  class= "opacity-margin">aura lieu</p>
      <p class="m-0 meeting-hour">Le <%= @day %> <%= @month %> à <%= @hour%>h</p>
      <p class= "opacity-margin">au</p>
      </div>
    </div>
  </div>


