      <p class="m-0">Le <%= @day %> <%= @month %> à <%= @hour%>h</p>
      <p class= "opacity-margin">au</p>
      </div>
    </div>
  </div>
    <div class= "card-category-meeting hide-meeting" style = 'background-image: linear-gradient(180deg, rgba(74, 222, 222, 0.2) 0%, rgba(46, 188, 231, 0.2) 71.35%, rgba(28, 167, 236, 0.2) 100%), url(<%= "#{@place.photo}" %>);'>
        <div class="bottom-left-meeting">
          <p><%= @place.category %></p>
          <% if @place.url.match(/^https/) %>
            <a href= "<%= @place.url%>" target ="_blank" style="text-decoration: none;">
            <% else %>
            <a href= "https://www.timeout.fr<%= @place.url%>" target ="_blank" style="text-decoration: none;">
          <% end %>

            <% if @place.name.size >=22 %>
            <h2 class=""><%= @place.name.first(22) %></h2>
            <% else %>
            <h2 class=""><%= @place.name %></h2>
            <% end %>
          </a>
          <a href="https://www.google.fr/maps/dir//<%= @place.address %>" target ="_blank" class="btn-google"><i class="fas fa-map-marked-alt"></i>  S'y rendre</a>
          <h3><%= @place.address %></h3>
        </div>
    </div>

