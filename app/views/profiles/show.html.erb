
<div class="justify-content-center text-center">

  <% @user = current_user %>
    <h2 class="h2-profile" style=""> Bonjour, <%= @user.name %> ! </h2>
  <div class="profile" style="background-image: url('http://res.cloudinary.com/dlh4cl5ih/image/upload/<%= @user.photos[0].key%>');">
  </div>


  <div class="profile-availabilities">
    <% current_user.availabilities %>
  </div>

  <div class="profile-sections">
    <div style="margin-bottom: 40px">
      <%= link_to "Mon profil", user_path(@user), class:"btn-option-profile" %>
    </div>

    <a href="" id="user-settings" class="btn-option-profile">Mes infos</a>
    <div class="profile-settings" id="myDIV">
      <%= simple_form_for @user, url: profile_path, method: :patch do |f| %>
        <%= f.input :sex, collection: ["homme", "femme"], label: "Sexe", html: { autocomplete: false } %>
        <%= f.input :sexual_orientation, collection: ["hetero", "bi", "homo"], label: "Orientation sexuelle" %>
        <%= f.input :name, label: "Nom" %>
        <%= f.input :intention, collection: ["pas de plan d'un soir", "pas de serieux", "on verra bien"], label: "Type de rencontre :" %>
        <%= f.input :height, label: "Taille en cm" %>
        <div class="s-d-check d-flex justify-content-center">
          <%= f.input :smoker, label: "Je fume"%>
          <%= f.input :drinker, label: "Je bois" %>
        </div>
        <%= f.input :description, label: "Description" %>
        <div class="photo-button"> <%= f.input :photo, as: :file %> </div>

        <%= f.submit "Submit", class: "btn btn-primary", id: "update-profile" %>
      <% end %>
    </div>

    <div style="margin-top: 40px; margin-bottom: 80px;">
    <%= link_to "Me dÃ©connecter", destroy_user_session_path, method: :delete, class:"btn-option-profile" %>
    </div>
  </div>

</div>






