
<div class="container justify-content-center text-center">
  <h1>Dashboard</h1>

  <div class="dashboard">
    <h2> <%= current_user.name %> </h2>
    <%= image_tag "#{current_user.photo}", alt: "user_photo", :class => "avatar-dashboard" %>

    <p> <%= current_user.description %> </p>
  </div>



  <div class="dashboard-availabilities">
    <% current_user.availabilities %>

  </div>

  <button id="user-settings">Mes info</button>
  <div class="dashboard-settings" id="myDIV">
    <%= simple_form_for @user, url: profile_path, method: :patch do |f| %>
      <%= f.input :sex, label: "Sexe" %>
      <%= f.input :sexual_orientation, label: "Orientation sexuelle" %>
      <%= f.input :name, label: "Nom" %>
      <%= f.input :intention, label: "Je suis lÃ  pour :" %>
      <%= f.input :height, label: "Taille" %>
      <%= f.input :smoker, label: "Je fume"%>
      <%= f.input :drinker, label: "Je bois" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :photo, as: :file %>

      <%= f.submit "Submit", class: "btn btn-primary", id: "update-profile" %>
    <% end %>
  </div>
</div>


