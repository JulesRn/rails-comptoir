<!DOCTYPE html>
<html>
  <head>
    <title>Comptoir : rencontrons-nous simplement !</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>

    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <%= render 'shared/ios_pwa_links' %>

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable"  content="yes">

    <!-- Facebook Open Graph data -->
    <meta charset="UTF-8">
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- permet d'enlever le rubberbandscroll dans l'app -->
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
    <!-- permet d'enlever le rubberbandscroll dans l'app -->


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,600,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One&display=swap" rel="stylesheet">
  </head>

  <body style="background: linear-gradient(0deg, rgba(255,255,255,0) 86%, rgba(0,0,0,1) 88%);min-height: 100vh; <%  if (controller.action_name == "show" && controller.controller_name != "meetings")  %> overflow: visible; <% else %> overflow: hidden; <% end %>"   >
    <% unless controller.controller_name == "lapins" || controller.controller_name == "meetings" || controller.controller_name == "pages"|| controller.controller_name == "sessions"|| (controller.action_name == "show" && controller.controller_name != "profiles") %>

      <%= render 'shared/navbar' %>
    <% end %>
    <%= render 'shared/flashes' %>

    <%= yield %>

    <!-- permet d'enlever le rubberbandscroll dans l'app -->

    <% unless (controller.action_name == "show" && controller.controller_name != "users") || (controller.action_name == "show" && controller.controller_name != "profiles")  %>
      <script>
        document.body.addEventListener('touchmove', function(event) {
          event.preventDefault();
        }, {
          passive: false,
          useCapture: false
        });

        window.onresize = function() {
          $(document.body).width(window.innerWidth).height(window.innerHeight);
        }

        $(function() {
          window.onresize();
        });
      </script>
    <% end %>
    <!-- permet d'enlever le rubberbandscroll dans l'app -->
  </body>
</html>
