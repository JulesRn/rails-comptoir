<div style="background:linear-gradient(155.21deg, #4ADEDE 0%, #2EBCE7 74.5%, #1CA7EC 100%); font-family: 'Fredoka One';">
<div class="container text-center align-items-center" style="height: 100vh; width: 100%; padding-top:20vh;">
<%= image_tag "LogoComptoir.png" , style: "height: 15vh;"%>
<h1 style="font-size: 120px;font-family: 'Fredoka One';color: white;font-size: 140px;
    text-shadow: 0px 10px 10px rgba(0, 0, 0, 0.25);">Comptoir</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs form-connexion">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "my@nomail.com" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                placeholder: "********" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion", class: "btn-white" %>
  </div>
<% end %>
<div style="other-links">
<%= render "devise/shared/links" %>
</div>
</div>
