
<div class="cards" style="margin-top: 50px;">

  <% @users.each do |user| %>
    <%= link_to user_path(user) do  %>
    <div class="card-presentation d-flex flex-column justify-content-center m-auto" style="background-image: linear-gradient(0deg, rgba(0,0,0,0.7) 0%, rgba(255,255,255,0) 40%), url(<%= user.photo %>)">
      <h2 class="card-name"><%= user.name %>, <%= user.age %></h2>
      <p class="card-description"><%= user.description %></p>
    </div>
    <% end %>
  <% end %>

</div>

<div class="row mt-5 buttons">
  <div class="col-2">
    <%= link_to likes_path, class: "btn btn-next"  do  %>
    <p><i class="fas fa-times"></i></p>
    <% end %>
  </div>
  <div class="col">
    <%= link_to likes_path, class: "btn btn-like d-flex justify-content-center" do  %>
    <p>
      <%= image_tag "LogoComptoir.png", style: "height: 100px;" %>
      Rencontrer
    </p>
    <% end %>
  </div>
</div>


